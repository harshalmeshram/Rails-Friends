<p style="color: green"><%= notice %></p>


<%= render @friend %>

<div class="jumbotron">
  <h1 class="display-4">
    <%#= @friend.first_name %>
    <%#= @friend.last_name %>

    
  </h1>
  <p class="lead">
    <%#= @friend.email %> 
    <%#= @friend.phone %> 
    <%#= @friend.twitter %>
  </p>

  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> |
  <%= link_to "Back", friends_path(@friend) %>


  <%= button_to "Destroy this friend", @friend, method: :delete %>
</div>
